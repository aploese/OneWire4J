<config-description:config-descriptions
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:config-description="http://eclipse.org/smarthome/schemas/config-description/v1.0.0"
    xsi:schemaLocation="http://eclipse.org/smarthome/schemas/config-description/v1.0.0
        http://eclipse.org/smarthome/schemas/config-description-1.0.0.xsd">

  <config-description uri="bridge-type:rs-232-xml">
            <parameter name="port" type="text">
                <context></context>
                <label>Serial Port</label>
                <description>Set the Serial Port</description>
                <required>true</required>
                <options>
                    <option value="/dev/ttyUSB0">/dev/ttyUSB0</option>
                    <option value="/dev/ttyUSB1">/dev/ttyUSB1</option>
                    <option value="COM1">COM1</option>
                </options>
            </parameter>
            <parameter name="refreshrate"  type="decimal" min="1">
                <description>Refresh rate in sec</description>
                <required>true</required>
                <default>60</default>
            </parameter>
  </config-description>

</config-description:config-descriptions>
